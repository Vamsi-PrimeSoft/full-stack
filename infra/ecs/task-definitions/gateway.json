{
  "family": "shopsphere-gateway",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "256",
  "memory": "512",
  "executionRoleArn": "arn:aws:iam::<ACCOUNT_ID>:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::<ACCOUNT_ID>:role/ecsTaskRole",
  "containerDefinitions": [
    {
      "name": "gateway",
      "image": "<ACCOUNT_ID>.dkr.ecr.<REGION>.amazonaws.com/shopsphere-gateway:latest",
      "essential": true,
      "portMappings": [
        { "containerPort": 4000, "protocol": "tcp" }
      ],
      "environment": [
        { "name": "PORT", "value": "4000" },
        { "name": "JWT_SECRET", "value": "supersecret" },
        { "name": "AUTH_URL", "value": "http://auth.shopsphere.local:4001" },
        { "name": "CATALOG_URL", "value": "http://catalog.shopsphere.local:4002" },
        { "name": "CART_URL", "value": "http://cart.shopsphere.local:4003" },
        { "name": "ORDER_URL", "value": "http://order.shopsphere.local:4004" }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/shopsphere-gateway",
          "awslogs-region": "<REGION>",
          "awslogs-stream-prefix": "ecs"
        }
      }
    }
  ]
}
