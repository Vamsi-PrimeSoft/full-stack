{
  "family": "shopsphere-auth",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "256",
  "memory": "512",
  "executionRoleArn": "arn:aws:iam::<ACCOUNT_ID>:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::<ACCOUNT_ID>:role/ecsTaskRole",
  "containerDefinitions": [
    {
      "name": "auth",
      "image": "<ACCOUNT_ID>.dkr.ecr.<REGION>.amazonaws.com/shopsphere-auth:latest",
      "essential": true,
      "portMappings": [
        { "containerPort": 4001, "protocol": "tcp" }
      ],
      "environment": [
        { "name": "PORT", "value": "4001" },
        { "name": "JWT_SECRET", "value": "supersecret" },
        { "name": "DB_HOST", "value": "<RDS_ENDPOINT>" },
        { "name": "DB_PORT", "value": "3306" },
        { "name": "DB_USER", "value": "shopsphere" },
        { "name": "DB_PASSWORD", "value": "<DB_PASSWORD>" },
        { "name": "DB_NAME", "value": "shopsphere" }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/shopsphere-auth",
          "awslogs-region": "<REGION>",
          "awslogs-stream-prefix": "ecs"
        }
      }
    }
  ]
}
